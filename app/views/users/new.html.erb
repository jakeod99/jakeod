<html>
  <body class="background-white">
    <div class="main-banner"></div>
    <h1>Register</h1>
    <%= form_for(@user) do |f| %>
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name %>
      </br>
      </br>
      <%= f.label :email %>
      <%= f.email_field :email %>
      </br>
      </br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      </br>
      </br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      </br>
      </br>
      </br>
      <%= f.submit "Register" %>
    <% end %>
  </body>
</html>